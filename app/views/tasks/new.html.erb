<h1>Create a New Task</h1>

<%= form_with model: @task, local: true do |form| %>
  <div class="form-group">
    <%= form.label :title %>
    <%= form.text_field :title %>  <!-- Field for task title -->
  </div>

  <div class="form-group">
    <%= form.label :details %>
    <%= form.text_area :details %>  <!-- Field for task details -->
  </div>

  <div class="form-group">
    <%= form.submit "Create Task" %>  <!-- Button to submit the form -->
  </div>
<% end %>

<%= link_to 'Back to list', tasks_path %>  <!-- Link to go back to the task list -->
