<h1>Edit Task</h1>

<%= form_with model: @task, local: true do |form| %>
  <div class="form-group">
    <%= form.label :title %>
    <%= form.text_field :title %>  <!-- Field for task title -->
  </div>

  <div class="form-group">
    <%= form.label :details %>
    <%= form.text_area :details %>  <!-- Field for task details -->
  </div>

  <div class="form-group">
    <%= form.check_box :completed %>  <!-- Checkbox for task completion -->
    <%= form.label :completed, 'Completed' %>  <!-- Label for the checkbox -->
  </div>

  <div class="form-group">
    <%= form.submit "Update Task" %>  <!-- Submit button -->
  </div>
<% end %>

<%= link_to 'Back to list', tasks_path %>  <!-- Link to go back to the task list -->
